<div ng-app="app" ng-controller="rootController as rootCtrl">
<md-whiteframe class="md-whiteframe-z1" layout layout-align="center center">


    <md-toolbar>
        <div class="md-toolbar-tools">
            <span>{{title}}</span>
            <span flex></span>
            <!-- the rootController sets an actions array in the scope, store a function in the execute property, so it can be called on click here -->
            <md-button ng-repeat="action in actions" ng-click="action.execute()">
                <i ng-if="action.icon" class="{{action.icon}}"></i>
                <md-tooltip>
                    {{action.title}}
                </md-tooltip>
            </md-button>
        </div>
    </md-toolbar>
</md-whiteframe>
<div ng-view>
</div>
